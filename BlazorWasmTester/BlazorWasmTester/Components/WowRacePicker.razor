

<MudButton @bind-Value="@Selected"
           Color="Color.Primary" 
           Variant="@(Selected ? Variant.Filled : Variant.Text)" 
           @onclick="@(() => { Switch(); OnClickCallback.InvokeAsync(); })">@Race.Name</MudButton>

@code {

    [Parameter]
    public Model.WowClassPickerModel.Race Race { get; set; }

    [Parameter]
    public bool Selected { get; set; } = false;

    private void Switch()
    {
        Selected = !Selected;
        SelectedChanged.InvokeAsync(Selected);
    }

    [Parameter]
    public EventCallback<bool> SelectedChanged { get; set; }

    [Parameter]
    public EventCallback OnClickCallback { get; set; }

}


<MudButton @bind-Value="@Selected" Variant="@(Selected ? Variant.Outlined : Variant.Text)" OnClick="Switch">@Race.Name</MudButton>

@code {

    [Parameter]
    public Model.WowClassPickerModel.Race Race { get; set; }

    [Parameter]
    public bool Selected { get; set; } = false;

    private void Switch()
    {
        Selected = !Selected;
        SelectedChanged.InvokeAsync(Selected);
    }

    [Parameter]
    public EventCallback<bool> SelectedChanged { get; set; }

}